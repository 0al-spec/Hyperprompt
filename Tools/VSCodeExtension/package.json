{
  "name": "hyperprompt",
  "displayName": "Hyperprompt",
  "description": "Hyperprompt language support",
  "publisher": "0al",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0al-spec/Hyperprompt.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "assets/icon.png",
  "activationEvents": [
    "onLanguage:hypercode",
    "onCommand:hyperprompt.compile",
    "onCommand:hyperprompt.compileLenient",
    "onCommand:hyperprompt.showPreview",
    "onCommand:hyperprompt.openBeside"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hypercode",
        "aliases": [
          "Hypercode",
          "hypercode"
        ],
        "extensions": [
          ".hc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypercode",
        "scopeName": "source.hypercode",
        "path": "./syntaxes/hypercode.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hyperprompt.compile",
        "title": "Hyperprompt: Compile"
      },
      {
        "command": "hyperprompt.compileLenient",
        "title": "Hyperprompt: Compile (Lenient)"
      },
      {
        "command": "hyperprompt.showPreview",
        "title": "Hyperprompt: Show Preview"
      },
      {
        "command": "hyperprompt.openBeside",
        "title": "Hyperprompt: Open Beside"
      }
    ],
    "configuration": {
      "title": "Hyperprompt",
      "properties": {
        "hyperprompt.resolutionMode": {
          "type": "string",
          "enum": [
            "strict",
            "lenient"
          ],
          "default": "strict",
          "description": "Default resolution mode for compile and preview commands."
        },
        "hyperprompt.previewAutoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically recompile and refresh preview on save."
        },
        "hyperprompt.diagnosticsEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic reporting in the Problems panel."
        },
        "hyperprompt.enginePath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the Hyperprompt engine binary. Leave empty to use PATH."
        },
        "hyperprompt.engineLogLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Log level passed to the Hyperprompt engine."
        }
      }
    },
    "colors": [
      {
        "id": "hyperprompt.previewBackground",
        "description": "Preview background for Hyperprompt webview panels.",
        "defaults": {
          "dark": "#0f1411",
          "light": "#f2efe9",
          "highContrast": "#000000",
          "highContrastLight": "#ffffff"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
