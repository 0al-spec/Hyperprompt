{
  "name": "hyperprompt",
  "displayName": "Hyperprompt",
  "description": "Hyperprompt language support",
  "publisher": "0al",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0al-spec/Hyperprompt.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "assets/icon.svg",
  "activationEvents": [
    "onLanguage:hypercode",
    "onCommand:hyperprompt.compile",
    "onCommand:hyperprompt.showPreview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hypercode",
        "aliases": [
          "Hypercode",
          "hypercode"
        ],
        "extensions": [
          ".hc"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hypercode",
        "scopeName": "source.hypercode",
        "path": "./syntaxes/hypercode.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "hyperprompt.compile",
        "title": "Hyperprompt: Compile"
      },
      {
        "command": "hyperprompt.showPreview",
        "title": "Hyperprompt: Show Preview"
      }
    ],
    "colors": [
      {
        "id": "hyperprompt.previewBackground",
        "description": "Preview background for Hyperprompt webview panels.",
        "defaults": {
          "dark": "#0f1411",
          "light": "#f2efe9",
          "highContrast": "#000000",
          "highContrastLight": "#ffffff"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
